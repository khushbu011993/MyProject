        android:layout_marginRight="2dp"
        android:background="@drawable/selector"
        android:text="Submit"/>
    <TextView
        android:layout_weight="0.20"
        android:id="@+id/tv_result"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:gravity="center"
