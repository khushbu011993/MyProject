        android:layout_marginTop="10dp"
        android:text="Enter Your OTP Number"/>
    <EditText
        android:layout_weight="0.20"
        android:layout_marginTop="5dp"
        android:id="@+id/editmobile"
        android:layout_width="match_parent"
